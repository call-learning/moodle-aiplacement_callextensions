<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="ai/placement/callextensions/db" VERSION="20250825" COMMENT="XMLDB file for Moodle ai/placement/callextensions"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="aiplacement_callextensions" COMMENT="Default comment for aiplacement_callextensions, please edit me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="aiplacement_callextensions_aiaction" COMMENT="AI Action table">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="contextid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="actionname" TYPE="char" LENGTH="1024" NOTNULL="false" SEQUENCE="false" COMMENT="Action logical name. Used to find the right persistent class if needed."/>
        <FIELD NAME="actiondata" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Any data (json) attached to this action."/>
        <FIELD NAME="status" TYPE="int" LENGTH="2" NOTNULL="false" SEQUENCE="false" COMMENT="Action status (RUNNING(0), CANCELLED(1),FINISHED(2),ERROR(3))"/>
        <FIELD NAME="statustext" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Current status text for information if needed."/>
        <FIELD NAME="progress" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Percent of progress (from 0 to 100)"/>
        <FIELD NAME="usermodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="usermodified" TYPE="foreign" FIELDS="usermodified" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="useractionidfk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="contextactionid" TYPE="foreign" FIELDS="contextid" REFTABLE="context" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
