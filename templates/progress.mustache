    @template aiplacement_courseassist/progress
    @package    ai_placement_callextensions

    Example context (json):
    {
        "action": "generate-glossary-entries",
        "actionname": "generate-glossary-entries",
        "statustext": "Generating glossary entries...",
        "progress": 50,
    }
}}

<div class="call-extension-progress">
    <h3>{{#str}}progressfor, aiplacement_callextensions, {{actionname}} {{/str}}</h3>
        <div class="text-center">{{#str}}pleasewait, aiplacement_callextensions{{/str}}</div>
        <p>{{actiondata}}</p>
        <div class="progress mx-3 my-2">
            <div class="progress-bar" role="progressbar" style="width: {{progress}}%;" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    <div class="status-text">{{#str}}message{{/str}}: {{statustext}}</div>
</div>
