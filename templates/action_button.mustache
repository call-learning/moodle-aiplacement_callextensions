    @template aiplacement_courseassist/action_button
    @package    ai_placement_callextensions

    Example context (json):
    {
        "action": "generate-glossary-entries",
        "cmid": "1",
        "component": "mod_glossary",
        "buttontitle": "Add to content",
        "buttonlabel": "Add to content"
    }
}}

<div class="call-extension-controls pt-3 pb-3">
    <button class="btn btn-primary action-button"
            type="button"
            data-action-name="{{actionname}}"
            data-cmid="{{cmid}}"
            data-contextid="{{contextid}}"
            data-component="{{component}}"
            data-toggle="tooltip"
            data-html="true"
            data-delay="200"
            title="{{buttontitle}}"
            id="id-{{uniqid}}"
    >
        <span class="ai-course-summarise-sparkles-icon white">
            {{#pix}} sparkles-white, aiplacement_courseassist {{/pix}}
        </span>
        {{buttonlabel}}
    </button>
    {{> core_message/message_jumpto }}
</div>
{{#js}}
    require(['aiplacement_callextensions/placement'], function(CALLExtensionAssist) {
        const AI = new CALLExtensionAssist('#id-{{uniqid}}');
    });
{{/js}}